<Window x:Class="warframe_relice_price.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:warframe_relice_price"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None"
        Topmost="True"
        ShowInTaskbar="True"
        ResizeMode="NoResize"
        WindowStartupLocation="Manual"
        Top="0"
        Left="0"
        Title="MainWindow">
    <Canvas x:Name="OverlayCanvas">
        <Canvas x:Name="HUDLayer"
            Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Canvas}}"
            Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Canvas}}"/>

        <Canvas x:Name="MenuLayer"
            Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Canvas}}"
            Height="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Canvas}}"/>
    </Canvas>

</Window>
